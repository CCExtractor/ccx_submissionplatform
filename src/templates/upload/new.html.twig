{% extends "base.html.twig" %}

{% block content %}
    {% set accept=".ts,.txt,.srt,.png,video/*" %}
    <h3>Upload a new sample</h3>
    <p>Please select a file using the "browse" button below, and then press the "Upload sample" button. This can take a while though! For bigger files it's recommended to use <a href="{{ path_for("Upload_ftp") }}">FTP upload</a> instead.</p>
    <p>The maximum allowed upload size is: {{ upload_size }}</p>
    {% if message is defined %}
    <div class="notice error"><i class="fa fa-large fa-remove"></i> {{ message }}</div>
    {% endif %}
    <form method="post" action="{{ path_for("Upload_new") }}" class="vertical" enctype="multipart/form-data">
        <label for="new_sample">File to upload</label>
        <input type="file" id="new_sample" name="new_sample" accept="{{ accept }}" />
        {% include "csrf.html.twig" %}
        <input type="submit" name="submit" value="Upload sample" />
    </form>
    <div class="notice information"><i class="fa fa-large fa-info-circle"></i> Accepted files: {{ accept }}. If you want to upload another type, please make a request to get it added.</div>
{% endblock %}