{% extends "base.html.twig" %}

{% block content %}
    <h3>Delete additional file {{ additional }} (.{{ extra.extension }}) from sample {{ sample.id }}</h3>
    <p>Are you sure you want to delete this additional file?</p>
    {% include "notice.html.twig" %}
    <form method="post" action="{{ path_for("Sample Info_delete_additional",{ "id": sample.id, "additional": additional }) }}">
        {% include "csrf.html.twig" %}
        <p>
            <input type="button" class="green" value="Cancel and return" onclick="history.back();" />
            <input type="submit" class="red" value="Yes, delete this file" />
        </p>
    </form>
{% endblock %}