{% extends "base.html.twig" %}

{% block content %}
    <h3>All registered users on the site up to now</h3>
    {% if users|length > 0 %}
        <table class="sortable tight striped">
            <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Admin?</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.isAdmin ? "Yes":"No" }}</td>
                <td>
                    <a href="{{ path_for('My Account_view_id', { 'id': user.id }) }}" title="View user info"><i class="fa fa-info-circle"></i></a>&nbsp;
                    <a href="{{ path_for('My Account_recover_id', { 'id': user.id }) }}" title="Send password recovery for user"><i class="fa fa-support"></i></a>&nbsp;
                    <a href="{{ path_for('My Account_rights', { 'id': user.id }) }}" title="Change user admin level"><i class="fa fa-key"></i></a>&nbsp;
                    <a href="{{ path_for('My Account_deactivate', { 'id': user.id }) }}" title="Deactivate user"><i class="fa fa-trash-o"></i></a>&nbsp;
                </td>
            </tr>
        {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no registered users on this site... Strange, because you are logged in? xD</p>
    {% endif %}
{% endblock %}