{% extends "base.html.twig" %}

{% block content %}
    <h3>Add a new regression test</h3>
    {% include "notice.html.twig" %}
    <form method="post" action="{{ path_for("Regression tests_new") }}">
        <label class="col_6" for="category">Category</label>
        <select id="category" class="col_6" name="category">
            {% for categoryI in categories %}
                <option value="{{ categoryI.id }}" {% if categoryI.id == category %}selected="selected"{% endif %}>{{ categoryI.name }}</option>
            {% endfor %}
        </select>
        <label class="col_6" for="sample">Sample</label>
        <select id="sample" class="col_6" name="sample">
            {% for sampleI in samples %}
                <option value="{{ sampleI.id }}" {% if sampleI.id == sample %}selected="selected"{% endif %}>{{ sampleI.id }} - {{ sampleI.getSampleFileName }}</option>
            {% endfor %}
        </select>
        <label class="col_6" for="command">Command</label>
        <input type="text" class="col_6" id="command" name="command" value="{{ command }}" />
        <label for="input_type" class="col_6">Input type</label>
        <select class="col_6" id="input_type" name="input_type">
            {% for input in input_types %}
                <option value="{{ input }}" {% if input == input_type %}selected="selected"{% endif %}>{{ input.toString }}</option>
            {% endfor %}
        </select>
        <label class="col_6" for="output_type">Output type</label>
        <select class="col_6" id="output_type" name="output_type">
            {% for output in output_types %}
                <option value="{{ output }}" {% if output == output_type %}selected="selected"{% endif %}>{{ output.toString }}</option>
            {% endfor %}
        </select>
        <span class="col_12">Result files can be managed on the test details page</span>
        <span class="col_12">
            <a href="{{ path_for("Regression tests") }}" class="button red">Cancel</a>
            <input type="submit" class="green" name="confirm" value="Add sample" />
        </span>
        {% include "csrf.html.twig" %}
    </form>
{% endblock %}